@model Feedback
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Feedback" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ClientImageFile" class="form-label">Image</label>
                    <img src="~/Uploads/@Model.ClientImage" alt="Alternate Text" width="100" />
                    <input class="form-control" asp-for="@Model.ClientImageFile">
                    <span asp-validation-for="@Model.ClientImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.Content" style="height:300px"></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.ClientImage" />

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Feedback" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>